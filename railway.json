{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Backend/RecipeBookAppBackend/src/Dockerfile"
  },
  "deploy": {
    "startCommand": "bash -c 'uvicorn app_api:app --host 0.0.0.0 --port ${PORT:-8000}'",
    "restartPolicyMaxRetries": 5
  }
}